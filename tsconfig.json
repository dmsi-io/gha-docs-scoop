{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "outFile": "./dist/index.js",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "removeComments": true,
    "module": "AMD"
  },
  "include": ["src/*"]
}
